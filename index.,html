    <script>
        // Firebase Setup
        const firebaseConfig = {
            apiKey: "AIzaSyAtbZ__g_HmrV0jzMGP6EJY3UGt3VG7LMw",
            authDomain: "biswajit-rabha-hacker-panel.firebaseapp.com",
            databaseURL: "https://biswajit-rabha-hacker-panel-default-rtdb.firebaseio.com/",
            projectId: "biswajit-rabha-hacker-panel",
            storageBucket: "biswajit-rabha-hacker-panel.appspot.com",
            messagingSenderId: "7099517202",
            appId: "1:7099517202:web:7196628d00236a003369b7"
        };
        firebase.initializeApp(firebaseConfig);
        const database = firebase.database();

        function openSurprise() {
            var audio = document.getElementById('bgMusic');
            audio.play().catch(e => console.log("Audio play failed"));
            document.getElementById('balloon-screen').style.display = 'none';
            document.getElementById('main-content').style.display = 'block';
        }

        function sendReply() {
            // Direct Reply without WhatsApp
            database.ref('special_wishes/').push({
                sender: "Krishna Devi Rabha",
                message: "Happy Mahashivratri (Received)",
                timestamp: new Date().toLocaleString()
            }).then(() => {
                document.getElementById('replyBtn').style.display = 'none';
                document.getElementById('sent-msg').style.display = 'block';
            }).catch((error) => {
                alert("Error: " + error.message);
            });
        }
    </script>
